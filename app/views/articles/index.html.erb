<h1>listando articulos </h1>
 <table border="1">

  <tr>
  <th>ID</th>
    <th>Title</th>
    <th>Text</th>
    <th>Actions</th>
    <th>Edit</th>
  </tr>
 <% @articles.each do |article| %>
    <tr>
    <td><%= article.id %></td>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to('show', article_path(article)) %></td>
      <td><%= link_to 'Edit', edit_article_path(article) %></td>
    </tr>
  <% end %>
</table>
<%= link_to 'ingresar un articulo ' , new_article_path %>