<%= form_with scope: :article, url: articles_path, local: true do |form| %>
  <% if @article.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@article.errors.count, "error") %> prohibited
      this article from being saved:
    </h2>
    <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
   
  
  <div class="mb-3">
      <%= form.label :title, "Titulo", class:"form-label" %>
      <%= form.text_field :title, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= form.label :text, "Texto", class: 'form-label' %>
    <%= form.text_area :text, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= form.label :photo, "Texto", class: 'form-label' %>
    <%= form.file_field :photo, direct_upload: true, class: 'form-control' %>
  </div>
    
   
    <p>
      <%= form.submit %>
    </p>


  <% end %>

  <%= link_to 'volver a la lista de articulos' , articles_path %>
  